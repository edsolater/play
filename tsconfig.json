{
  "compilerOptions": {
    "module": "esnext", //如果过于新，typescript就不会转换 export * as ns 的语法了
    "target": "ES2022",
    "lib": ["ESNext"],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node", //可以自动使用文件夹下的 index.ts
    "noImplicitAny": false,
    "strict": true,
    "noEmit": true,
    "outDir": "dist",
    "declaration": true // see https://www.typescriptlang.org/docs/handbook/declaration-files/dts-from-js.html#tsconfig
  }
}
